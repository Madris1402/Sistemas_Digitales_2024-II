`timescale 1 ps/ 1 ps
module SM2_vlg_sample_tst(
	clock,
	input1,
	reset,
	sampler_tx
);
input  clock;
input  input1;
input  reset;
output sampler_tx;

reg sample;
time current_time;
always @(clock or input1 or reset)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

module SM2_vlg_check_tst (
	output1,
	output2,
	sampler_rx
);
input  output1;
input  output2;
input sampler_rx;

reg  output1_expected;
reg  output2_expected;

reg  output1_prev;
reg  output2_prev;

reg  output1_expected_prev;
reg  output2_expected_prev;

reg  last_output1_exp;
reg  last_output2_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:2] on_first_change ;


initial
begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 2'b1;
end

// update real /o prevs

always @(trigger)
begin
	output1_prev = output1;
	output2_prev = output2;
end

// update expected /o prevs

always @(trigger)
begin
	output1_expected_prev = output1_expected;
	output2_expected_prev = output2_expected;
end



// expected output1
initial
begin
	output1_expected = 1'bX;
end 

// expected output2
initial
begin
	output2_expected = 1'bX;
end 
// generate trigger
always @(output1_expected or output1 or output2_expected or output2)
begin
	trigger <= ~trigger;
end

always @(posedge sampler_rx or negedge sampler_rx)
begin
`ifdef debug_tbench
	$display("Scanning pattern %d @time = %t",i,$realtime );
	i = i + 1;
	$display("| expected output1 = %b | expected output2 = %b | ",output1_expected_prev,output2_expected_prev);
	$display("| real output1 = %b | real output2 = %b | ",output1_prev,output2_prev);
`endif
	if (
		( output1_expected_prev !== 1'bx ) && ( output1_prev !== output1_expected_prev )
		&& ((output1_expected_prev !== last_output1_exp) ||
			on_first_change[1])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port output1 :: @time = %t",  $realtime);
		$display ("     Expected value = %b", output1_expected_prev);
		$display ("     Real value = %b", output1_prev);
		nummismatches = nummismatches + 1;
		on_first_change[1] = 1'b0;
		last_output1_exp = output1_expected_prev;
	end
	if (
		( output2_expected_prev !== 1'bx ) && ( output2_prev !== output2_expected_prev )
		&& ((output2_expected_prev !== last_output2_exp) ||
			on_first_change[2])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port output2 :: @time = %t",  $realtime);
		$display ("     Expected value = %b", output2_expected_prev);
		$display ("     Real value = %b", output2_prev);
		nummismatches = nummismatches + 1;
		on_first_change[2] = 1'b0;
		last_output2_exp = output2_expected_prev;
	end

	trigger <= ~trigger;
end
initial 

begin 
$timeformat(-12,3," ps",6);
#1000000;
if (nummismatches > 0)
	$display ("%d mismatched vectors : Simulation failed !",nummismatches);
else
	$display ("Simulation passed !");
$finish;
end 
endmodule

module SM2_vlg_vec_tst();
// constants                                           
// general purpose registers
reg clock;
reg input1;
reg reset;
// wires                                               
wire output1;
wire output2;

wire sampler;                             

// assign statements (if any)                          
SM2 i1 (
// port map - connection between master ports and signals/registers   
	.clock(clock),
	.input1(input1),
	.output1(output1),
	.output2(output2),
	.reset(reset)
);

// clock
always
begin
	clock = 1'b0;
	clock = #5000 1'b1;
	#5000;
end 

// input1
always
begin
	input1 = 1'b0;
	input1 = #10000 1'b1;
	#10000;
end 

// reset
initial
begin
	reset = 1'b0;
end 

SM2_vlg_sample_tst tb_sample (
	.clock(clock),
	.input1(input1),
	.reset(reset),
	.sampler_tx(sampler)
);

SM2_vlg_check_tst tb_out(
	.output1(output1),
	.output2(output2),
	.sampler_rx(sampler)
);
endmodule

